  <script>
    // Journey panel toggle
    const journeyToggle = document.getElementById('journeyToggle');
    const journeyPanel = document.getElementById('journeyPanel');
    journeyToggle.addEventListener('click', ()=> journeyPanel.classList.toggle('show'));

    

    // Modal open/close
    const submitBtn = document.getElementById('submitTaskBtn');
    const modalBackdrop = document.getElementById('modalBackdrop');
    const cancelSubmit = document.getElementById('cancelSubmit');
    const confirmSubmit = document.getElementById('confirmSubmit');

    function openModal(){ modalBackdrop.classList.add('show'); modalBackdrop.setAttribute('aria-hidden','false'); }
    function closeModal(){ modalBackdrop.classList.remove('show'); modalBackdrop.setAttribute('aria-hidden','true'); }

    submitBtn.addEventListener('click', openModal);
    cancelSubmit.addEventListener('click', closeModal);
    confirmSubmit.addEventListener('click', () => {
      alert('Task submitted (demo).');
      closeModal();
    });

    modalBackdrop.addEventListener('click', (e) => {
      if (e.target === modalBackdrop) closeModal();
    });

    // Play button simulation (open video link)
    document.getElementById('playVideoBtn').addEventListener('click', () => {
      window.open('https://www.youtube.com/watch?v=TiMRwri1xJ8', '_blank');
    });

    // Add sub-thread (demo)
    function addSubThread(btn){
      const card = btn.closest('.thread');
      const box = document.createElement('div');
      box.className = 'sub-row';
      box.innerHTML = '<div class="box" contenteditable="true">New Sub Thread</div><div class="box" contenteditable="true">New Interpretation</div>';
      card.insertBefore(box, card.querySelector('.controls'));
    }

    // Toggle "see more" in 4SA
    function toggleMore(btn){
      const target = btn.closest('.collapse').querySelector('.editor');
      if (target.style.display === 'none' || !target.style.display) {
        target.style.display = target.style.display === 'block' ? 'none' : 'block';
      }
    }

    // Small UX: close journey panel on click outside
    document.addEventListener('click', (e) => {
      if (!journeyPanel.contains(e.target) && !journeyToggle.contains(e.target)) {
        journeyPanel.classList.remove('show');
      }
    });

    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') {
        closeModal();
        journeyPanel.classList.remove('show');
      }
    });
  </script>
